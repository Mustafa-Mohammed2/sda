<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

  <androidx.core.widget.NestedScrollView
      android:id="@+id/scroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      android:clipToPadding="false"
      tools:context=".View_car_ditailes"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:errorTextColor="@color/colorAccent"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_datials_modle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/et_datials_modle"
            android:tooltipText="Name">

        </com.google.android.material.textfield.TextInputEditText>

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:errorTextColor="@color/colorAccent"
          >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_datials_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:hint="@string/et_datials_color"

            android:tooltipText="Name">

        </com.google.android.material.textfield.TextInputEditText>

      </com.google.android.material.textfield.TextInputLayout>

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:errorTextColor="@color/colorAccent"
          >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_datials_Description"
            android:layout_weight="1"
            android:id="@+id/et_datials_Description"

            android:tooltipText="Name"

            >
        </com.google.android.material.textfield.TextInputEditText>

      </com.google.android.material.textfield.TextInputLayout>




      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:errorTextColor="@color/colorAccent"
          >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_datials_dpl"
            android:layout_weight="1"
            android:tooltipText="Name"

            android:id="@+id/et_datials_dpl"
            >

        </com.google.android.material.textfield.TextInputEditText>

      </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_160sdp"
      android:fitsSystemWindows="true"
      android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
      >
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentScrim="@color/colorPrimary"
        app:expandedTitleMarginStart="@dimen/_15sdp"
        app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
         >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"
           android:id="@+id/iv_image_datial"
          app:layout_collapseMode="parallax"
          />

      <androidx.appcompat.widget.Toolbar
          android:layout_width="match_parent"
          android:layout_height="?actionBarSize"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          android:id="@+id/detail_toolbar"
          app:layout_collapseMode="pin"
          >

      </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.CollapsingToolbarLayout>

  </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>