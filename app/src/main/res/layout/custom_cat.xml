<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="15dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="15dp"
        >


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/custome_car_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:srcCompat="@drawable/gesr"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />

        <LinearLayout

            android:id="@+id/linear_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/custom_car_modle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="modle"
                android:layout_marginStart="5dp"


                />

            <TextView
                android:id="@+id/custom_car_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:layout_marginStart="50dp"




                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/custom_car_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                android:layout_marginStart="5dp"


                />

            <TextView
                android:id="@+id/custom_car_dpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dpl"
                android:layout_marginStart="50dp"


                />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>